# Минимальная рабочая конфигурация Apache для CMS

# Включаем mod_rewrite
RewriteEngine On

# Обработка запросов к админке (должно быть первым)
# Перенаправление статических файлов админки (assets - styles, scripts, images)
RewriteCond %{REQUEST_URI} ^/admin/assets/(styles|scripts|images)/(.*)$
RewriteCond %{DOCUMENT_ROOT}/engine/skins/assets/$1/$2 -f
RewriteRule ^admin/assets/(styles|scripts|images)/(.*)$ /engine/skins/assets/$1/$2 [L]

# Обратная совместимость: старые пути (styles, scripts, images)
RewriteCond %{REQUEST_URI} ^/admin/(styles|scripts|images)/(.*)$
RewriteCond %{DOCUMENT_ROOT}/engine/skins/assets/$1/$2 -f
RewriteRule ^admin/(styles|scripts|images)/(.*)$ /engine/skins/assets/$1/$2 [L]

# Исключаем реальные файлы и директории
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Перенаправляем все запросы (включая админку) на index.php
RewriteRule ^(.*)$ index.php [QSA,L]

# Базовая безопасность
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

<Files ~ "\.sql$">
    Order allow,deny
    Deny from all
</Files>

<Files ~ "\.log$">
    Order allow,deny
    Deny from all
</Files>

# Отключаем отображение директорий
Options -Indexes

# Удаляем заголовок X-Powered-By для безопасности
<IfModule mod_headers.c>
    Header unset X-Powered-By
    Header unset Expires
    Header unset Pragma
</IfModule>

# Настройки кеширования
<IfModule mod_headers.c>
    # Используем только Cache-Control, не Expires и Pragma
    <FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    <FilesMatch "\.(html|php)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </FilesMatch>
</IfModule>
