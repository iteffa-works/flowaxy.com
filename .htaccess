# Минимальная рабочая конфигурация Apache для CMS

# Включаем mod_rewrite
RewriteEngine On

# Обработка запросов к админке (должно быть первым)
# Перенаправление стилей и скриптов админки
RewriteCond %{REQUEST_URI} ^/admin/(styles|scripts)/(.*)$
RewriteCond %{DOCUMENT_ROOT}/engine/skins/$1/$2 -f
RewriteRule ^admin/(styles|scripts)/(.*)$ /engine/skins/$1/$2 [L]

# Обработка всех остальных запросов админки
RewriteCond %{REQUEST_URI} ^/admin/(.*)$
RewriteRule ^admin/(.*)$ engine/include/admin-router.php [QSA,L]

# Исключаем реальные файлы и директории
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Исключаем системные директории
RewriteCond %{REQUEST_URI} !^/admin/
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !^/assets/
RewriteCond %{REQUEST_URI} !^/uploads/
RewriteCond %{REQUEST_URI} !^/cache/
RewriteCond %{REQUEST_URI} !^/engine/

# Перенаправляем все остальные запросы на router.php
RewriteRule ^(.*)$ router.php [QSA,L]

# Базовая безопасность
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

<Files ~ "\.sql$">
    Order allow,deny
    Deny from all
</Files>

<Files ~ "\.log$">
    Order allow,deny
    Deny from all
</Files>

# Отключаем отображение директорий
Options -Indexes
